{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MSVC x64)",
      "type": "shell",
      "command": "cl",
      "args": [
        "/nologo",
        "/EHsc",
        "/std:c++20",
        "/W4",
        "/Zi",
        "/I", "include",
        "/Fe:build\\app.exe",
        "src\\main.cpp",
        "/link",
        "/DEBUG"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
